@model CNPMNC.Data.Models.DSBenhNhan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/QuanLy/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh xửa</h2>

<h4>Danh sách bệnh nhân</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DSBenhNhanID" />
            <div class="form-group">
                <label asp-for="BenhNhanID" class="control-label">Bệnh nhân ID</label>
                <select asp-for="BenhNhanID" class="form-control" asp-items="ViewBag.BenhNhanID"></select>
                <span asp-validation-for="BenhNhanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiBenhID" class="control-label">Loại bệnh</label>
                <select asp-for="LoaiBenhID" class="form-control" asp-items="ViewBag.LoaiBenhID"></select>
                <span asp-validation-for="LoaiBenhID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayKham" class="control-label">Ngày khám</label>
                <input asp-for="NgayKham" class="form-control" />
                <span asp-validation-for="NgayKham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrieuChung" class="control-label">Triệu chứng</label>
                <input asp-for="TrieuChung" class="form-control" />
                <span asp-validation-for="TrieuChung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

