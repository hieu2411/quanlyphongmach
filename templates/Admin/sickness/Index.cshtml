@model IEnumerable<CNPMNC.Data.Models.LoaiBenh>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenLoaiBenh)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiBenh)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LoaiBenhID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LoaiBenhID">Details</a> |
